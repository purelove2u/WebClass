package scope;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class MemberDAO {	// ~DAO(Data Access Object
	// JDBC (Java DataBase Connection)
	// 1. 클래스 드라이버 로드
	// 2. DB서버와 커넥션(DB서버 IP주소 / userid / userpw)
	// 3. Statement 객체 생성 => sql 구문 전송하기 필요
	// 4. sql 처리 결과 받기(int - update/delete/insert, ResultSet-select)
	// 5. sql 처리 결과에 따라 자바 코드 실행
	
	static {
		try {
			//oracle.jdbc.driver.OracleDriver 도 가능
			Class.forName("oracle.jdbc.OracleDriver");
		} catch (ClassNotFoundException e) {
			e.printStackTrace();
		}
	}
	
	public static Connection getConnection() {
		try {
			String url="";
			String user="";
			String password="";
			return DriverManager.getConnection(url, user, password);
			
		} catch (SQLException e) {
			e.printStackTrace();
		}
		return null;
	}
	
	

}
